<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMySQLDemo.Views.PlatDetailModal"
             Title="Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Image x:Name="PlatImage" HeightRequest="200" Aspect="AspectFill" />

            <Label x:Name="NameLabel" FontSize="22" FontAttributes="Bold" />
            <Label x:Name="CategoryLabel" FontAttributes="Italic" />
            <Label x:Name="PriceLabel" FontSize="18" />
            <Label x:Name="DescriptionLabel" FontSize="14" />

            <Button Text="Close" Clicked="OnCloseClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
